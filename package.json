{
  "name": "vscode-markdown-wysiwyg-editor",
  "displayName": "Markdown WYSIWYG Editor",
  "description": "A WYSIWYG Markdown editor for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdownWysiwyg.editor",
        "displayName": "Markdown WYSIWYG Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . -outDir out",
    "watch-tests": "tsc -p . -outDir out -w",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "css-loader": "^6.8.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@milkdown/core": "^7.17.1",
    "@milkdown/ctx": "^7.17.1",
    "@milkdown/plugin-history": "^7.17.1",
    "@milkdown/plugin-listener": "^7.17.1",
    "@milkdown/preset-commonmark": "^7.17.1",
    "@milkdown/preset-gfm": "^7.17.1",
    "@milkdown/react": "^7.17.1",
    "@milkdown/theme-nord": "^7.17.1",
    "@milkdown/utils": "^7.17.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "prosemirror-state": "^1.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "url": "^0.11.4"
  }
}